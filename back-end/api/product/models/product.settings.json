{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "float"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "quantityStock": {
      "type": "integer"
    },
    "display": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "discount": {
      "type": "integer",
      "max": 100,
      "min": 0,
      "default": 0
    },
    "category": {
      "model": "category"
    },
    "images": {
      "type": "component",
      "repeatable": true,
      "component": "image-list.list-image-related",
      "max": 3
    }
  }
}
