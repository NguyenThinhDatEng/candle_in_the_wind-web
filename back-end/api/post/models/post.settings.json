{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true,
    "populateCreatorFields": true,
    "privateAttributes": [
      "__v",
      "createdAt",
      "updatedAt",
      "id",
      "image"
    ]
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 10,
      "maxLength": 200
    },

    "content": {
      "type": "richtext",
      "required": true,
      "minLength": 20
    },

    "lockComment": {
      "type": "boolean",
      "default": false
    },

    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    
    "catalogs": {
      "collection": "catalog"
    },
    
    "comments": {
      "collection": "comment"
    }
  }
}
