{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "content": {
      "type": "richtext"
    },
    "lockComment": {
      "type": "boolean",
      "default": false
    },
    "catalog": {
      "model": "catalog",
      "via": "posts"
    },
    "comments": {
      "collection": "comment",
      "via": "post"
    },
    "customer": {
      "model": "customer",
      "via": "posts"
    },
    "overview": {
      "type": "text"
    }
  }
}
