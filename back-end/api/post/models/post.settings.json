{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true,
    "privateAttributes": [
      "__v",
      "createdAt",
      "updatedAt",
      "id",
      "image"
    ]
  },
  "pluginOptions": {},
  "attributes": {
    "lockComment": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "title": {
      "type": "string",
      "required": true,
      "minLength": 10,
      "maxLength": 200
    },
    "catalogs": {
      "collection": "catalog"
    },
    "content": {
      "type": "richtext",
      "required": true,
      "minLength": 20
    },
    "comments": {
      "via": "post",
      "collection": "comment"
    }
  }
}
