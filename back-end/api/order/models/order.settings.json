{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false,
    "privateAttributes": [
      "__v",
      "createdAt",
      "updatedAt",
      "id"
    ]
  },
  "pluginOptions": {},
  "attributes": {
    "fullname": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "maxLength": 150,
      "required": true
    },
    "phoneNumber": {
      "type": "string",
      "maxLength": 11,
      "required": true
    },
    "address": {
      "type": "text",
      "maxLength": 1000,
      "required": true
    },
    "subtotal": {
      "type": "float"
    },
    "grand_total": {
      "type": "float"
    },
    "note": {
      "type": "text"
    },
    "status": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "customer": {
      "model": "customer",
      "via": "orders"
    },
    "items": {
      "via": "order",
      "collection": "item"
    },
    "payment": {
      "type": "enumeration",
      "enum": [
        "Bank_transfer",
        "Delivery"
      ]
    },
    "province": {
      "model": "province",
      "via": "orders"
    }
  }
}
