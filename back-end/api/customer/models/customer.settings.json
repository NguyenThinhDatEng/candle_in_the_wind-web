{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "name": "Customer",
    "description": "This represents the customer Model"
  },
  "options": {
    "increments": true,
    "privateAttributes": [
      "__v",
      "createdAt",
      "updatedAt",
      "id"
    ],
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "username": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "phoneNumber": {
      "type": "string",
      "maxLength": 11
    },
    "password": {
      "type": "password",
      "required": true
    },
    "dateOfBirth": {
      "type": "date"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "loyal": {
      "type": "boolean",
      "default": false
    },
    "gender": {
      "type": "enumeration",
      "enum": [
        "Male",
        "Female"
      ]
    }
  }
}
