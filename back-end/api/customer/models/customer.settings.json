{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "name": "Customer",
    "description": "This represents the customer Model"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false,
    "privateAttributes" : ["__v" , "createdAt", "updatedAt", "id", "avatar", "Gender"]
  },
  "pluginOptions": {},
  "attributes": {
    "username": {
      "type": "string"
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phoneNumber": {
      "type": "string",
      "maxLength": 20
    },
    "password": {
      "type": "password",
      "required": true
    },
    "dateOfBirth": {
      "type": "date"
    },
    "avatar": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "loyal": {
      "type": "boolean"
    },
    "gender": {
      "type": "enumeration",
      "enum": [
        "Male",
        "Female"
      ]
    }
  }
}
